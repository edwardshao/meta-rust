@@ -217,6 +217,11 @@ pub fn get_or_default_sysroot() -> PathBuf {
             while rel.pop() {
                 p.pop();
             }
+
+            // The last element in a relative path can't be popped, so remove it here.
+            if let Some(_) = p.file_name() {
+                p.pop();
+            }
             p
         }
         None => panic!("can't determine value for sysroot")
